<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Red_Car_Wash.Vista.Negocio"
             Title="NEGOCIO">
    <ContentPage.Content>
        <Grid>
            <Image Source="fondo.jpeg" Aspect="AspectFill"/>
            <Frame CornerRadius="20" VerticalOptions="Center" Margin="20" HasShadow="False" Padding="20" BackgroundColor="#DDFFFFFF">
                <StackLayout Padding="0" Spacing="10">
                    <Label Text="Red Car Wash" HorizontalTextAlignment="Center" TextColor="Black" FontSize="Title" FontAttributes="Bold"/>
                    <Button Text="Servicios" BackgroundColor="DarkRed" TextColor="White" CornerRadius="20" Clicked="BtnServicios"/>
                    <Button Text="Informes" BackgroundColor="DarkRed" TextColor="White" CornerRadius="20" Clicked="BtnInformes"/>
                    <Button Text="Personal" BackgroundColor="DarkRed" TextColor="White" CornerRadius="20" Clicked="BtnPersonal"/>
                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>